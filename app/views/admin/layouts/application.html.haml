!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/mini.css/3.0.1/mini-default.min.css", :rel => "stylesheet"}/

    %title Pele ADMIN
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'admin_application', media: 'all'
    = javascript_pack_tag 'admin_application'
  %body
    - if admin_signed_in?
      .nav
        %ul
          %li= link_to 'Matches', admin_tournament_matches_path
          %li= link_to 'Sign out', admin_sign_out_path

    - if flash.any?
      .messages
        .flash.notice= flash[:notice]
        .flash.alert= flash[:alert]

    .content
      = yield
